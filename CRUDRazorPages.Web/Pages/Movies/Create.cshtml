@page
@model CRUDRazorPages.Web.Pages.Movies.CreateModel
@{
    ViewData["Title"] = "Crear Pelicula";
}

<h2 class="text-info">Crear Pelicula</h2>

<div class="border">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding:30px;">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.Title" class="font-weight-bold"></label>
                            <input asp-for="Movie.Title" class="form-control" />
                            <span asp-validation-for="Movie.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.Description" class="font-weight-bold"></label>
                            <textarea asp-for="Movie.Description" class="form-control"></textarea>
                            <span asp-validation-for="Movie.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.Duration" class="font-weight-bold"></label>
                            <input asp-for="Movie.Duration" class="form-control" />
                            <span asp-validation-for="Movie.Duration" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.Premiere" class="font-weight-bold"></label>
                            <input type="date" asp-for="Movie.Premiere" class="form-control" />
                            <span asp-validation-for="Movie.Premiere" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.Takings" class="font-weight-bold"></label>
                            <input asp-for="Movie.Takings" class="form-control" />
                            <span asp-validation-for="Movie.Takings" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label asp-for="Movie.DirectorId" class="font-weight-bold"></label>
                            @if (Model.SelectListDirectors.Count() > 0)
                            {
                                @Html.DropDownListFor(m => m.Movie.DirectorId, Model.SelectListDirectors, new { @class = "form-control" })
                                <span asp-validation-for="Movie.DirectorId" class="text-danger"></span>
                            }
                            else
                            {
                                <span class="text-danger">Debe crear registros de directores.</span>
                                <a asp-area="" asp-page="../Directors/Create" class="btn btn-info">Crear directores</a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="row">
                        <label asp-for="Movie.Image" class="font-weight-bold"></label>
                        <input asp-for="Movie.Image" class="form-control" />

                        <span asp-validation-for="Movie.Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div style="margin: 0 auto; margin-top:5px;">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                        <a asp-page="Index" class="btn btn-info btn-block">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}