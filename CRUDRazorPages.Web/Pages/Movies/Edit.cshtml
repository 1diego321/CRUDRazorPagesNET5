@page
@model CRUDRazorPages.Web.Pages.Movies.EditModel
@{
    ViewData["Title"] = "Editar Pelicula";
}


<h2 class="text-info">Editar Pelicula</h2>
<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Movie.Id" />
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.Title"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Movie.Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Movie.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.Description"></label>
                    </div>
                    <div class="col-sm-4">
                        <textarea asp-for="Movie.Description" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="Movie.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.Duration"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Movie.Duration" class="form-control" />
                    </div>
                    <span asp-validation-for="Movie.Duration" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.Premiere"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="date" asp-for="Movie.Premiere" class="form-control" />
                    </div>
                    <span asp-validation-for="Movie.Premiere" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.Takings"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Movie.Takings" class="form-control" />
                    </div>
                    <span asp-validation-for="Movie.Takings" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Movie.DirectorId"></label>
                    </div>
                    @if (Model.SelectListDirectors.Count() > 0)
                    {
                        <div class="col-sm-4">
                            @Html.DropDownListFor(m => m.Movie.DirectorId, Model.SelectListDirectors, new { @class = "form-control" })
                        </div>
                        <span asp-validation-for="Movie.DirectorId" class="text-danger"></span>
                    }
                    else
                    {
                        <span class="text-danger">Debe crear registros de directores.</span>
                        <a asp-area="" asp-page="../Directors/Create" class="btn btn-info">Crear directores</a>
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Guardar" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
