@page
@model CRUDRazorPages.Web.Pages.Movies.DetailsModel
@{
    ViewData["Title"] = "Detalles";

    string url = "";
}

@if (Model.Movie.ImageURL != string.Empty)
{
    url = Model.Movie.ImageURL;
}
else
{
    url = "/img/default.jpg";
}

<h2 class="text-info">Detalles</h2>

<div class="border">
    <div class="container" style="padding:30px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="">
                        <figure align="center">
                            <img style="border-radius: 10px;" src="@url" width="600" class="img-fluid" alt="@Model.Movie.Title" />
                            <figcaption class="h3 font-weight-bold">@Model.Movie.Title</figcaption>
                        </figure>
                    </div>
                </div>
                <div class="form-group">
                        <label asp-for="Movie.Description" class="font-weight-bold"></label>
                        <p>@Model.Movie.Description</p>
                    <div class="form-group">
                        <label asp-for="Movie.Duration" class="font-weight-bold"></label>
                        <div>
                            @Html.DisplayFor(x => x.Movie.Duration, new { @class = "" }) minutos.
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Movie.Premiere" class="font-weight-bold"></label>
                        <div>
                            @Model.Movie.Premiere.ToShortDateString()
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Movie.Takings" class="font-weight-bold"></label>
                        <div>
                            $@Html.DisplayFor(x => x.Movie.Takings)
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Movie.DirectorName" class="font-weight-bold"></label>
                        <div>
                            <a href="../Directors/Details?id=@Model.Movie.DirectorId">@Model.Movie.DirectorName</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div style="margin: 0 auto; margin-top:5px;">
                    <a asp-page="Edit" asp-route-id="@Model.Movie.Id" class="btn btn-success btn-block">Editar</a>

                    <a asp-page="Index" class="btn btn-info btn-block">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>